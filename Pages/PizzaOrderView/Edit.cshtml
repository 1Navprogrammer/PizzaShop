@page
@model PizzaShop.Pages.PizzaOrderView.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PizzaOrder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PizzaOrder.PizzaOrderId" />
            <div class="form-group">
                <label asp-for="PizzaOrder.OrderNumber" class="control-label"></label>
                <select asp-for="PizzaOrder.OrderNumber" class="form-control" asp-items="ViewBag.OrderNumber"></select>
                <span asp-validation-for="PizzaOrder.OrderNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PizzaOrder.PizzaCode" class="control-label"></label>
                <select asp-for="PizzaOrder.PizzaCode" class="form-control" asp-items="ViewBag.PizzaCode"></select>
                <span asp-validation-for="PizzaOrder.PizzaCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PizzaOrder.Quantity" class="control-label"></label>
                <input asp-for="PizzaOrder.Quantity" class="form-control" />
                <span asp-validation-for="PizzaOrder.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
